<br />
<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1 class="text-center">Learn something today</h1>
  <hr />

<% @courses.each do |course| %>
  <h2 class="text-center">
    <%= link_to course.title, course_path(course) %>
  </h2>
    <%= image_tag course.image, class:'img-responsive'%>
    <br />
  <div class="col-sm-12 col-xs-12 description">
    <%= course.description %>
  </div>
  <br class="clr" />
  <br />
  <div class="col-sm-12 col-xs-12 text-center">
    <%= link_to 'More details. ...', course_path(course), class:'btn btn-primary btn-large' %>
  </div>
   <br class="clr" />
   <hr />
<% end %>
</div>

